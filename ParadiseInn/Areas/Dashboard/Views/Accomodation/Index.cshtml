@model ParadiseInn.Areas.Dashboard.ViewModel.AllAccomodationViewModel

@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col col-lg-12">
        <h2>Accomodations</h2>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" value="@Model.searchterm" placeholder="Search.">
                <select class="form-control" name="accomodationPackageId">
                    <option value="0">Select Package</option>
                    @if (Model.AccomodationPackages != null && Model.AccomodationPackages.Count() > 0)
                    {
                        foreach (var item in Model.AccomodationPackages)
                        {
                            <option value="@item.Id" @(item.Id == Model.accomodationPackageId ? "selected" : string.Empty)>@item.Name</option>
                        }
                    }
                </select>
                <div class="input-group-append" id="button-addon4">
                    <button class="btn btn-outline-info" type="submit"><i class="fas fa-search mr-1"></i>Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index","Accomodation")"><i class="fas fa-redo-alt mr-1"></i>Reset</a>
                    <button data-href="@Url.Action("Action", "Accomodation")" class="data-btn btn btn-outline-success" type="button" data-toggle="modal" data-target="#actionModal"><i class="fa fa-plus mr-1" aria-hidden="true"></i>Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row mt-3">
    <div class="col col-lg-12">
        @*@{ Html.RenderAction("Listing", "AccomodationTypes");}*@

        @{
            Html.RenderPartial("_Listing", Model);
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

    </div>
</div>

<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
       .done(function (response) {

             $("#actionModal .modal-dialog").html(response);

       });

    });
</script>