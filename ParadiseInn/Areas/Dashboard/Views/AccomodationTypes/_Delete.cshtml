
@model ParadiseInn.Areas.Dashboard.ViewModel.AccomodationTypesActionViewModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
               <span> Delete Accomodation Type </span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="Id" value="@Model.Id" />
            </form>
            <div class="errorDiv">

            </div>
            <div class="alert alert-danger" role="alert">
                Are you sure want to delete this Accomodation Type???
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times mr-1" aria-hidden="true"></i>Close</button>
            <button id="DeleteBtn" type="button" class="btn btn-danger"> <i class="fa fa-trash mr-1" aria-hidden="true"></i>Delete</button>
        </div>
    </div>
}


    <script>

    $("#DeleteBtn").click(function () {

             $.ajax({
                 url: '@Url.Action("Delete", "AccomodationTypes")',
                 type: 'post',
                 data: $("#actionForm").serialize()
             })
             .done(function (response) {
                 if (response.Success) {
                     debugger;
                     window.location.href = '@Url.Action("Index", "AccomodationTypes")';
                 }
                 else {
                     $(".errorDiv").html(response.Message);
                 }
             });

        });

    </script>

