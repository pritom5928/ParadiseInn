@model ParadiseInn.Areas.Dashboard.ViewModel.AllAccomodationTypesViewModel


@if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AccomodationTypes)
            {
                <tr>
                    <td scope="row">@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccomodationTypes", new { id = item.Id})" id="editBtn" type="button" class="data-btn btn btn-info noHover" data-toggle="modal" data-target="#actionModal"><i class="fas fa-edit mr-1"></i>Edit</button>

                        <button data-href="@Url.Action("Delete", "AccomodationTypes", new { id = item.Id})" id="deleteBtn" type="button" class="data-btn btn btn-danger noHover" data-toggle="modal" data-target="#actionModal"><i class="fa fa-trash mr-1" aria-hidden="true"></i>Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

else
{
    <div class="alert alert-danger" role="alert">
        Sorry! No records exists.
    </div>
}