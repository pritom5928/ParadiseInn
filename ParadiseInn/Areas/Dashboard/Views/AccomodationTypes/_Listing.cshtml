@model ParadiseInn.Areas.Dashboard.ViewModel.AllAccomodationTypesViewModel


@if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AccomodationTypes)
            {
                <tr>
                    <th scope="row">@item.Name</th>
                    <td>@item.Description</td>
                    <td>
                        <button type="button" class="btn btn-info">Edit</button>
                        <button type="button" class="btn btn-danger">Danger</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

else
{
    <div class="alert alert-danger" role="alert">
        Sorry! No records exists.
    </div>
}